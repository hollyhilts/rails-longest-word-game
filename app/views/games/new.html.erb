<h1>New Game</h1>

<ul class="letters">
  <% @letters.each do |letter| %>
    <li class="letter"><%=letter%></li>
    <%  %>
  <% end %>
</ul>

<div class="container">
  <p>What's the longest word you can find?</p>
  <form action="/score" method="post" class="entry">
    <input type="text"
    name="guess"
    value="<%= params[:guess] %>"
    placeholder="try your best">
    <input type="submit" value="submit">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
  </form>
</div>
